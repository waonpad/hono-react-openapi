// const endpoints = makeApi([
export const endpoints = ({
{{#each endpoints}}
	"{{alias}}": {
		method: "{{method}}",
		path: "{{path}}",
		{{#if @root.options.withAlias}}
		{{#if alias}}
		alias: "{{alias}}",
		{{/if}}
		{{/if}}
		{{#if description}}
		description: `{{description}}`,
		{{/if}}
		{{#if requestFormat}}
		requestFormat: "{{requestFormat}}",
		{{/if}}
		{{!-- {{#if parameters}} --}}
		{{!-- parameters: [
			{{#each parameters}}
			{
				name: "{{name}}",
				{{#if description}}
				description: `{{description}}`,
				{{/if}}
				{{#if type}}
				type: "{{type}}",
				{{/if}}
				schema: {{{schema}}}
			},
			{{/each}}
		], --}}
		parameters: {
			body: {
			{{#each parameters}}
			{{!-- typeがBodyのとき --}}
				{{#ifeq type "Body"}}
				{{#if description}}
				description: `{{description}}`,
				{{/if}}
				schema: {{{schema}}}
				{{/ifeq}}
			{{/each}}
			},
			query: {
				schema: z.object({
				{{#each parameters}}
				{{!-- typeがQueryのとき --}}
					{{#ifeq type "Query"}}
					{{name}}: {{{schema}}},
					{{/ifeq}}
				{{/each}}
				}),
				__: "{{#each parameters}}{{#ifeq type "Query"}}_{{/ifeq}}{{/each}}"
			},
			path: {
				schema: z.object({
				{{#each parameters}}
				{{!-- typeがPathのとき --}}
					{{#ifeq type "Path"}}
					{{name}}: {{{schema}}},
					{{/ifeq}}
				{{/each}}
				}),
				__: "{{#each parameters}}{{#ifeq type "Path"}}_{{/ifeq}}{{/each}}"
			},
		},
		{{!-- {{/if}} --}}
		response: {{{response}}},
		{{#if errors.length}}
		errors: [
			{{#each errors}}
			{
				{{#ifeq status "default" }}
				status: "default",
				{{else}}
				status: {{status}},
				{{/ifeq}}
				{{#if description}}
				description: `{{description}}`,
				{{/if}}
				schema: {{{schema}}}
			},
			{{/each}}
		]
		{{/if}}
	},
{{/each}}
// ]) as const;
}) as const;

